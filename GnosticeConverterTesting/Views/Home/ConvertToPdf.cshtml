@{
    ViewBag.Title = "ConvertToPdf";
}

<h2>ConvertToPdf</h2>
<div class="content">
    @using (Html.BeginForm("ConvertToPdf", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Enter Details</h4>
            <hr />

            <div class="form-group">
                @Html.Label("Wallpaper", htmlAttributes: new { @class = "control-label col-md-3" })

                <div class="col-md-7">
                    <input id="photo" type="file" name="file" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>



